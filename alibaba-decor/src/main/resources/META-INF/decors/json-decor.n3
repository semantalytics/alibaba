@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#>.
@prefix dc:         <http://purl.org/dc/elements/1.1/>.
@prefix xsd:        <http://www.w3.org/2001/XMLSchema#>.
@prefix owl:        <http://www.w3.org/2002/07/owl#>.
@prefix pov:        <http://www.openrdf.org/rdf/2007/09/point-of-view#>.
@prefix dcr:        <http://www.openrdf.org/rdf/2007/09/decor#>.
@prefix ali:        <http://www.openrdf.org/rdf/2007/09/alibaba/>.

# -----------------------------------------------
# Individuals
# -----------------------------------------------

# -----------------------------------------------
# Individual PresentationRepositories
# -----------------------------------------------

ali:presentation-repository a dcr:PresentationRepository;
    dcr:registeredPresentation ali:json-presentation.

# -----------------------------------------------
# Individual Presentations
# -----------------------------------------------

ali:json-presentation a dcr:TextPresentation;
    rdfs:label "json presentation"@en;
    rdfs:comment "Presentation for JavaScript Object Notation."@en;
    dcr:accept "application/json";
    dcr:accept "application/x-javascript";
    dcr:accept "text/json";
    dcr:accept "text/x-json";
    dcr:accept "text/javascript";
    dcr:contentType "application/json";
    dcr:intention ali:general;
    dcr:intention ali:detail;
    dcr:intention ali:related;
    dcr:encoding ali:javascript-encoding;
    dcr:representations [a dcr:RepresentationRepository;
        dcr:registeredRepresentation ali:json-representation];
    dcr:decoration ali:none.

# -----------------------------------------------
# Individual Encodings
# -----------------------------------------------

ali:javascript-encoding a dcr:Encoding;
    rdfs:label "javascript encoding"@en;
    rdfs:comment "Escapes characters into a javascript string."@en.

# -----------------------------------------------
# Individual Representation
# -----------------------------------------------

ali:json-representation a dcr:Representation;
    rdfs:label "json representation"@en;
    rdfs:comment "JavaScript Object Notation representation."@en;
    dcr:intention ali:general;
    dcr:intention ali:detail;
    dcr:intention ali:related;
    dcr:intention ali:reference;
    dcr:intention ali:modify;
    dcr:intention ali:lookup;
    dcr:conformsTo ali:table;
    dcr:conformsTo ali:titled-list;
    dcr:conformsTo ali:inline;
    dcr:decoration [a dcr:TextDecoration;
    	dcr:before "[";
    	dcr:separation ",";
    	dcr:after "]";
    	dcr:empty "[]"];
    dcr:displayDecoration [a dcr:TextDecoration;
    	dcr:before "{";
    	dcr:separation ",";
    	dcr:after "}";
    	dcr:empty "{}"];
    dcr:perspectiveDecoration [a dcr:TemplateDecoration;
    	dcr:before "'<%=display.povName%>':";
    	dcr:empty "'<%=display.povName%>':[]"];
    dcr:searchDecoration [a dcr:TemplateDecoration;
    	dcr:before "'<%=display.povName%>':[";
    	dcr:separation ",";
    	dcr:after "]";
    	dcr:empty "'<%=display.povName%>':[]"];
    dcr:literalDecoration [a dcr:TemplateDecoration;
    	dcr:before "'<%=display.povName%>':['";
    	dcr:separation "','";
    	dcr:after "']";
    	dcr:empty "'<%=display.povName%>':[]"].