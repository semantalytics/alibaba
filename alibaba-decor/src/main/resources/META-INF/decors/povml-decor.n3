@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#>.
@prefix dc:         <http://purl.org/dc/elements/1.1/>.
@prefix xsd:        <http://www.w3.org/2001/XMLSchema#>.
@prefix owl:        <http://www.w3.org/2002/07/owl#>.
@prefix pov:        <http://www.openrdf.org/rdf/2007/09/point-of-view#>.
@prefix dcr:        <http://www.openrdf.org/rdf/2007/09/decor#>.
@prefix ali:        <http://www.openrdf.org/rdf/2007/09/alibaba/>.

# -----------------------------------------------
# Individuals
# -----------------------------------------------

# -----------------------------------------------
# Individual PresentationRepositories
# -----------------------------------------------

ali:presentation-repository a dcr:PresentationRepository;
    dcr:registeredPresentation ali:povml-presentation.

# -----------------------------------------------
# Individual Presentations
# -----------------------------------------------

ali:povml-presentation a dcr:TextPresentation;
    rdfs:label "povml presentation"@en;
    rdfs:comment "Presentation for POV Markup Language."@en;
    dcr:accept "application/povml";
    dcr:accept "text/povml";
    dcr:accept "text/x-povml";
    dcr:accept "application/alibaba.povml+xml";
    dcr:contentType "application/alibaba.povml+xml";
    dcr:intention ali:general;
    dcr:intention ali:detail;
    dcr:intention ali:related;
    dcr:intention ali:modify;
    dcr:encoding ali:xml-encoding;
    dcr:representations ali:povml-representation-repository;
    dcr:searchPatterns ali:search-pattern-repository;
    dcr:perspectives ali:perspective-repository;
    dcr:formats ali:format-repository;
    dcr:perspectiveFactory ali:perspective-factory;
    dcr:decoration [a dcr:TemplateDecoration;
        dcr:before """<povml xmlns="http://www.openrdf.org/rdf/2007/09/povml#" xml:lang="<%= lang %>">""";
        dcr:after "</povml>"].

# -----------------------------------------------
# Individual Encodings
# -----------------------------------------------

# -----------------------------------------------
# Individual RepresentationRepositories
# -----------------------------------------------

ali:povml-representation-repository a dcr:RepresentationRepository;
    rdfs:label "povml representation repository"@en;
    rdfs:comment "Representation repository for POV Markup Language representations."@en;
    dcr:registeredRepresentation ali:povml-representation.

# -----------------------------------------------
# Individual Representation
# -----------------------------------------------

ali:povml-representation a dcr:Representation;
    rdfs:label "povml array representation"@en;
    rdfs:comment "POV Markup Language representation in array format."@en;
    dcr:intention ali:general;
    dcr:intention ali:detail;
    dcr:intention ali:related;
    dcr:intention ali:reference;
    dcr:intention ali:modify;
    dcr:intention ali:lookup;
    dcr:conformsTo ali:table;
    dcr:conformsTo ali:titled-list;
    dcr:conformsTo ali:inline;
    dcr:decoration [a dcr:TextDecoration;
    	dcr:before """<values>""";
    	dcr:after "</values>";
    	dcr:empty "<values/>"];
    dcr:displayDecoration [a dcr:TemplateDecoration;
    	dcr:before """<resource uri="<%= resource.qName?.namespaceURI %><%= resource.qName?.localPart %>">""";
    	dcr:after "</resource>";
    	dcr:empty "<resource/>"];
    dcr:perspectiveDecoration [a dcr:TemplateDecoration;
    	dcr:before """<display name="<%=display.povName%>">""";
    	dcr:after "</display>";
    	dcr:empty """<display name="<%=display.povName%>"/>"""];
    dcr:searchDecoration [a dcr:TemplateDecoration;
    	dcr:before """<display name="<%=display.povName%>">""";
    	dcr:after "</display>";
    	dcr:empty """<display name="<%=display.povName%>"/>"""];
    dcr:literalDecoration [a dcr:TemplateDecoration;
    	dcr:before """<display name="<%=display.povName%>"><values><literal>""";
    	dcr:separation "</literal><literal>";
    	dcr:after "</literal></values></display>";
    	dcr:empty """<display name="<%=display.povName%>"><values/></display>"""].