dcr:searchDecoration a owl:ObjectProperty.
ali:searchDecoration-general a pov:PropertyDisplay;
	rdfs:label "Search Decoration"@en;
	rdfs:comment "Visual decoration that is used when displaying."@en;
	pov:property dcr:searchDecoration;
	pov:style ali:normal;
	pov:perspective ali:text-decoration-general;
	pov:name "searchDecoration".
ali:searchDecoration-modify a pov:PropertyDisplay;
	rdfs:label "Search Decoration"@en;
	rdfs:comment "Visual decoration that is used when displaying."@en;
	pov:property dcr:searchDecoration;
	pov:style ali:normal;
	pov:perspective ali:text-decoration-modify;
