dcr:perspectiveDecoration a owl:ObjectProperty.
ali:perspectiveDecoration-general a pov:PropertyDisplay;
	rdfs:label "Perspective Decoration"@en;
	rdfs:comment "Visual decoration that is used when displaying."@en;
	pov:property dcr:perspectiveDecoration;
	pov:style ali:normal;
	pov:perspective ali:text-decoration-general;
	pov:name "perspectiveDecoration".
ali:perspectiveDecoration-modify a pov:PropertyDisplay;
