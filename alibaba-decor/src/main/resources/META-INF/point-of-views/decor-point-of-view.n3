ali:text-presentation-general a pov:Perspective;
    pov:represents dcr:TextPresentation;
    pov:purpose ali:general;
    pov:layout ali:titled-list;
    pov:displays [a rdf:Seq;
        rdf:_1 ali:label;
        rdf:_2 ali:comment;
        rdf:_3 ali:accept;
        rdf:_4 ali:contentType;
        rdf:_5 ali:intention-reference;
        rdf:_6 ali:encoding-reference;
        rdf:_7 ali:representations-reference;
        rdf:_8 ali:searchPatterns-reference;
        rdf:_9 ali:perspectives-reference;
        rdf:_10 ali:formats-reference;
        rdf:_11 ali:perspectiveFactory-reference;
        rdf:_12 ali:decoration-general].

ali:text-presentation-modify a pov:Perspective;
    pov:represents dcr:TextPresentation;
    pov:purpose ali:modify;
    pov:layout ali:titled-list;
    pov:displays [a rdf:Seq;
        rdf:_1 ali:label;
        rdf:_2 ali:comment;
        rdf:_3 ali:accept;
        rdf:_4 ali:contentType;
        rdf:_5 ali:intention-lookup;
        rdf:_6 ali:encoding-lookup;
        rdf:_7 ali:representations-lookup;
        rdf:_8 ali:searchPatterns-lookup;
        rdf:_9 ali:perspectives-lookup;
        rdf:_10 ali:formats-lookup;
        rdf:_11 ali:perspectiveFactory-lookup;
        rdf:_12 ali:decoration-modify].

ali:representation-general a pov:Perspective;
	pov:represents dcr:Representation;
	pov:purpose ali:general;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:label;
		rdf:_2 ali:comment;
		rdf:_3 ali:intention-reference;
		rdf:_4 ali:conformsTo-reference;
		rdf:_5 ali:decoration-general;
		rdf:_6 ali:displayDecoration-general;
		rdf:_7 ali:perspectiveDecoration-general;
		rdf:_8 ali:searchDecoration-general;
		rdf:_9 ali:literalDecoration-general].

ali:text-decoration-general a pov:Perspective;
	pov:represents dcr:TextDecoration;
	pov:purpose ali:general;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:before;
		rdf:_2 ali:after;
		rdf:_3 ali:separation;
		rdf:_4 ali:empty].

ali:representation-modify a pov:Perspective;
	pov:represents dcr:Representation;
	pov:purpose ali:modify;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:label;
		rdf:_2 ali:comment;
		rdf:_3 ali:intention-lookup;
		rdf:_4 ali:conformsTo-lookup;
		rdf:_5 ali:decoration-modify;
		rdf:_6 ali:displayDecoration-modify;
		rdf:_7 ali:perspectiveDecoration-modify;
		rdf:_8 ali:searchDecoration-modify;
		rdf:_9 ali:literalDecoration-modify].

ali:text-decoration-modify a pov:Perspective;
	pov:represents dcr:TextDecoration;
	pov:purpose ali:modify;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:before;
		rdf:_2 ali:separation;
		rdf:_3 ali:after;
		rdf:_4 ali:empty].

ali:label-reference a pov:ReferencePerspective;
	pov:purpose ali:reference;
	pov:layout ali:inline;
	pov:displays [a rdf:Seq;
		rdf:_1 [a pov:PropertyDisplay;
			pov:style ali:normal;
			pov:property rdfs:label;
			pov:format ali:none]].

ali:label-lookup a pov:ReferencePerspective;
	pov:purpose ali:lookup;
	pov:layout ali:inline;
	pov:lookup [a pov:SearchPattern;
		pov:selectExpression [a pov:Expression;
			pov:inSparql """SELECT ?resource
			WHERE {?resource <http://www.w3.org/2000/01/rdf-schema#label> ?lit
			FILTER (str(?lit) = ?label)}""";
			pov:binding [a pov:Display;
				pov:name "label"]]];
	pov:displays [a rdf:Seq;
		rdf:_1 [a pov:PropertyDisplay;
			pov:name "label";
			pov:style ali:normal;
			pov:property rdfs:label;
			pov:format ali:none]].

