ali:width-30ex a pov:Size;
	pov:width [a pov:Length;
		pov:inCorpusSize "30"^^xsd:int];
	pov:height [a pov:Length;
		pov:inFontSize "1"^^xsd:int].

ali:width-40ex a pov:Size;
	pov:width [a pov:Length;
		pov:inCorpusSize "40"^^xsd:int];
	pov:height [a pov:Length;
		pov:inFontSize "1"^^xsd:int].

ali:width-40ex-height-2em a pov:Size;
	pov:width [a pov:Length;
		pov:inCorpusSize "40"^^xsd:int];
	pov:height [a pov:Length;
		pov:inFontSize "2"^^xsd:int].

ali:width-40ex-height-4em a pov:Size;
	pov:width [a pov:Length;
		pov:inCorpusSize "40"^^xsd:int];
	pov:height [a pov:Length;
		pov:inFontSize "4"^^xsd:int].

