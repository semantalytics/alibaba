@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#>.
@prefix dc:         <http://purl.org/dc/elements/1.1/>.
@prefix xsd:        <http://www.w3.org/2001/XMLSchema#>.
@prefix owl:        <http://www.w3.org/2002/07/owl#>.
@prefix pov:        <http://www.openrdf.org/rdf/2007/09/point-of-view#>.
@prefix dcr:        <http://www.openrdf.org/rdf/2007/09/decor#>.
@prefix ali:        <http://www.openrdf.org/rdf/2007/09/alibaba/>.

# -----------------------------------------------
# Individuals
# -----------------------------------------------

# -----------------------------------------------
# Individual PerspectiveRepositories
# -----------------------------------------------

ali:perspective-repository a pov:PerspectiveRepository;
    pov:registeredPerspective ali:representation-general;
    pov:registeredPerspective ali:representation-modify.

# -----------------------------------------------
# Individual PerspectiveFactories
# -----------------------------------------------

# -----------------------------------------------
# Individual Perspectives
# -----------------------------------------------

ali:representation-general a pov:Perspective;
	pov:represents dcr:Representation;
	pov:purpose ali:general;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:label;
		rdf:_2 ali:comment;
		rdf:_3 ali:intention;
		rdf:_4 ali:conformsTo;
		rdf:_5 ali:decoration-general;
		rdf:_6 ali:displayDecoration-general;
		rdf:_7 ali:perspectiveDecoration-general;
		rdf:_8 ali:searchDecoration-general;
		rdf:_9 ali:literalDecoration-general].

ali:text-decoration-general a pov:Perspective;
	pov:represents dcr:TextDecoration;
	pov:purpose ali:general;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:before;
		rdf:_2 ali:after;
		rdf:_3 ali:separation;
		rdf:_4 ali:empty].

ali:representation-modify a pov:Perspective;
	pov:represents dcr:Representation;
	pov:purpose ali:modify;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:label;
		rdf:_2 ali:comment;
		rdf:_3 ali:intention;
		rdf:_4 ali:conformsTo;
		rdf:_5 ali:decoration-modify;
		rdf:_6 ali:displayDecoration-modify;
		rdf:_7 ali:perspectiveDecoration-modify;
		rdf:_8 ali:searchDecoration-modify;
		rdf:_9 ali:literalDecoration-modify].

ali:text-decoration-modify a pov:Perspective;
	pov:represents dcr:TextDecoration;
	pov:purpose ali:modify;
	pov:layout ali:titled-list;
	pov:displays [a rdf:Seq;
		rdf:_1 ali:before;
		rdf:_2 ali:separation;
		rdf:_3 ali:after;
		rdf:_4 ali:empty].

