pov:property a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "property"@en;
    rdfs:comment "The RDF property shown in this display."@en ;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:PropertyDisplay;
    rdfs:range rdf:Property.

# -----------------------------------------------
