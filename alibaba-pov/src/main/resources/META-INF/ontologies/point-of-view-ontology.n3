# -----------------------------------------------
# Display Properties
# -----------------------------------------------

# pov:name

pov:size a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "size"@en;
    rdfs:comment "The width and height that should be used to display the values."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Display;
    rdfs:range pov:Size.

pov:style a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "style"@en;
    rdfs:comment "The style that should be used for this display."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Display;
    rdfs:range pov:Style.

pov:format a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "format"@en;
    rdfs:comment "The format that should be used for displaying the literal values."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Display;
    rdfs:range pov:Format.

pov:perspective a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "perspective"@en;
    rdfs:comment "Perspective which should be used for displaying the object values."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Display;
    rdfs:range pov:Perspective.

pov:searchPattern a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "search pattern"@en;
    rdfs:comment "Specifies a SearchPattern to be used for retrieved of values."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Display;
    rdfs:range pov:SearchPattern.

# -----------------------------------------------
# PropertyDisplay Properties
