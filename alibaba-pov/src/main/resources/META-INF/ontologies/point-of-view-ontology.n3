# OrderByExpressionRepository Properties
# -----------------------------------------------

# -----------------------------------------------
# OrderByExpression Properties
# -----------------------------------------------

pov:ascending a owl:ObjectProperty;
    rdfs:label "asceding"@en;
    rdfs:comment "The display this expression is ordered by ascending"@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:OrderByExpression;
    rdfs:range pov:Display.

pov:descending a owl:ObjectProperty;
    rdfs:label "descending"@en;
    rdfs:comment "The display this expression is ordered by descending"@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:OrderByExpression;
    rdfs:range pov:Display.

# -----------------------------------------------    		
# Intent Properties
# -----------------------------------------------

pov:aim a owl:ObjectProperty;
    rdfs:label "aim"@en;
    rdfs:comment "This more sepecific intent complies with the broader intent given."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Intent;
    rdfs:range pov:Intent.

# -----------------------------------------------
# DisplayRepository Properties
# -----------------------------------------------

pov:registeredDisplay a owl:ObjectProperty;
    rdfs:label "registered display"@en;
    rdfs:comment "Set of active displays in repository."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:DisplayRepository;
    rdfs:range pov:Display.

