@prefix rdf:        <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#>.
@prefix dc:         <http://purl.org/dc/elements/1.1/>.
@prefix xsd:        <http://www.w3.org/2001/XMLSchema#>.
@prefix owl:        <http://www.w3.org/2002/07/owl#>.
@prefix pov:        <http://www.openrdf.org/rdf/2007/09/point-of-view#>.

# -----------------------------------------------
# Ontology
# -----------------------------------------------

pov: a owl:Ontology;
    rdfs:label       "Point of View Ontology"@en;
    rdfs:comment     "Ontology for defining display perspectives of resources."@en;
    dc:date          "2007-05-04"^^xsd:date;
    dc:format        "OWL-DL"@en;
    dc:creator       "James Leigh <james@leighnet.ca>";
    owl:imports      <http://www.w3.org/2002/07/owl#>;
    owl:imports      <http://www.w3.org/2000/01/rdf-schema#>;
    owl:imports      <http://purl.org/dc/elements/1.1/>;
    owl:imports      <http://www.w3.org/2001/XMLSchema#>;
    owl:versionInfo  "0.1".

dc:creator a owl:AnnotationProperty.

# -----------------------------------------------
# Classes
# -----------------------------------------------

pov:PerspectiveRepository a owl:Class;
    rdfs:label "Perspective Repository"@en;
    rdfs:comment "Aggregate repository of perspectives."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:PerspectiveFactory a owl:Class;
    rdfs:label "Perspective Factory"@en;
    rdfs:comment "Use to create perspectives as needed."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Perspective a owl:Class;
    rdfs:label "Perspective"@en;
    rdfs:comment "Display perspective for a resource, identified by one or more of it classes."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:ReferencePerspective a owl:Class;
    rdfs:label "Reference Perspective"@en;
    rdfs:comment "Display reference perspective for referencing a resource, identified by one or more of it classes."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Perspective.

pov:SearchPatternRepository a owl:Class;
    rdfs:label "Search Pattern Repository"@en;
    rdfs:comment "Repository of search patterns"@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:SearchPattern a owl:Class;
    rdfs:label "Search Pattern"@en;
    rdfs:comment "Describes a query and how to display it."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:ExpressionRepository a owl:Class;
    rdfs:label "Expression Repository"@en;
    rdfs:comment "Repository of Expressions."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Expression a owl:Class;
    rdfs:label "Expression"@en;
    rdfs:comment "Describes part of a query."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:OrderByRepository a owl:Class;
    rdfs:label "ORDER BY Expression Repository"@en;
    rdfs:comment "Repository of ORDER BY Expressions."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:ExpressionRepository.

pov:OrderByExpression a owl:Class;
    rdfs:label "ORDER BY Expression"@en;
    rdfs:comment "Describes an ORDER BY expression for a display."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Expression.

pov:Intent a owl:Class;
    rdfs:label "Intent"@en;
    rdfs:comment "The propose or intent in which a specific persective might be appropriate."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Layout a owl:Class;
    rdfs:label "Layout"@en;
    rdfs:comment "Layout used for display values."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:DisplayRepository a owl:Class;
    rdfs:label "Display Repository"@en;
    rdfs:comment "Repository of active displays."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:DisplayFactory a owl:Class;
    rdfs:label "Display Factory"@en;
    rdfs:comment "Used to create displays as needed."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Display a owl:Class;
    rdfs:label "Display"@en;
    rdfs:comment "Description of how a value should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:QNameDisplay a owl:Class;
    rdfs:label "QName Display"@en;
    rdfs:comment "Description of how the qualified name should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Display.

pov:CollectionDisplay a owl:Class;
    rdfs:label "Collection Display"@en;
    rdfs:comment "Description of how a collection of values should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Display.

pov:PropertyDisplay a owl:Class;
    rdfs:label "Property Display"@en;
    rdfs:comment "Description of how a property value should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Display.

pov:SeqDisplay a owl:Class;
    rdfs:label "Seq Display"@en;
    rdfs:comment "Description of how sequential property values should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Display.

pov:BagDisplay a owl:Class;
    rdfs:label "Bag Display"@en;
    rdfs:comment "Description of how a collection of property value should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Display.

pov:AltDisplay a owl:Class;
    rdfs:label "Alt Display"@en;
    rdfs:comment "Description of how alternative property values should be shown."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Display.

pov:Size a owl:Class;
    rdfs:label "Size"@en;
    rdfs:comment "Contains the width and height restrictions of a display."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Length a owl:Class;
    rdfs:label "Length"@en;
    rdfs:comment "Measurement of a width or height for a display."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Style a owl:Class;
    rdfs:label "Style"@en;
    rdfs:comment "Display style for formatted values."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:FormatRepository a owl:Class;
    rdfs:label "Format Repository"@en;
    rdfs:comment "Repository of active formats."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:Format a owl:Class;
    rdfs:label "Format"@en;
    rdfs:comment "Describes how a resource should appear."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf owl:Thing.

pov:MessagePatternFormat a owl:Class;
    rdfs:label "Message Pattern Format"@en;
    rdfs:comment "Indicates how property values should be formatted."@en;
    rdfs:isDefinedBy pov:;
    rdfs:subClassOf pov:Format.

# -----------------------------------------------
# Properties
# -----------------------------------------------

# -----------------------------------------------
# PerspectiveRepository Properties
# -----------------------------------------------

pov:registeredPerspective a owl:ObjectProperty;
    rdfs:label "registered perspective"@en;
    rdfs:comment "Set of active perspectives in repository."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:PerspectiveRepository;
    rdfs:range pov:Perspective.

# -----------------------------------------------
# PerspectiveFactory Properties
# -----------------------------------------------

pov:displayFactory a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "display factory"@en;
    rdfs:comment "Factory used to create displays."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:PerspectiveFactory;
    rdfs:range pov:DisplayFactory.

# -----------------------------------------------
# Perspective Properties
# -----------------------------------------------

pov:purpose a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "purpose"@en;
    rdfs:comment "A representation must be selected based on this purpose."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain [a owl:Class; owl:unionOf (pov:Perspective pov:SearchPattern)];
    rdfs:range pov:Intent.

pov:layout a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "layout"@en;
    rdfs:comment "The layout that is or should be used."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain [a owl:Class; owl:unionOf (pov:Perspective pov:SearchPattern)];
    rdfs:range pov:Layout.

pov:represents a owl:ObjectProperty;
    rdfs:label "represents"@en;
    rdfs:comment "Specifies what type of individuals this perspective can be used for."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain [a owl:Class; owl:unionOf (pov:Perspective pov:SearchPattern)];
    rdfs:range rdfs:Class.

pov:displays a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "displays"@en;
    rdfs:comment "List of all Displays which should be shown in this perspective."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain [a owl:Class; owl:unionOf (pov:Perspective pov:SearchPattern)];
    rdfs:range rdf:Seq.

# -----------------------------------------------
# ReferencePerspective Properties
# -----------------------------------------------

pov:lookup a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "lookup"@en;
    rdfs:comment "Search pattern that can be used to lookup the referenced resource."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:ReferencePerspective;
    rdfs:range pov:SearchPattern.

pov:suggestion a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "suggestion"@en;
    rdfs:comment "Search pattern that can be used to suggest resources from partial information."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:ReferencePerspective;
    rdfs:range pov:SearchPattern.

# -----------------------------------------------
# SearchPatternRepository Properties
# -----------------------------------------------

pov:registeredSearchPattern a owl:ObjectProperty;
    rdfs:label "registered search pattern"@en;
    rdfs:comment "Set of active search patterns in repository."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:SearchPatternRepository;
    rdfs:range pov:SearchPattern.

# -----------------------------------------------
# SearchPattern Properties
# -----------------------------------------------

# pov:purpose

# pov:layout

# pov:represents

# pov:displays

pov:selectExpression a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "select expression"@en;
    rdfs:comment "The primary query expression, including SELECT, FROM, and begin WHERE."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:SearchPattern;
    rdfs:range pov:Expression.

pov:filterExpressions a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "query"@en;
    rdfs:comment "The FILTER or WHERE expression(s)."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:SearchPattern;
    rdfs:range pov:ExpressionRepository.

pov:groupByExpression a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "group by expression"@en;
    rdfs:comment "The query expression after the filters, including closing WHERE and GROUP BY."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:SearchPattern;
    rdfs:range pov:Expression.

pov:orderByExpressions a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "order by expressions"@en;
    rdfs:comment "The ORDER BY expressions for a search pattern."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:SearchPattern;
    rdfs:range pov:OrderByRepository.

# -----------------------------------------------
# ExpressionRepository Properties
# -----------------------------------------------

pov:defaultExpression a owl:ObjectProperty; a owl:FunctionalProperty;
    rdfs:label "default expression"@en;
    rdfs:comment "A default expression."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:ExpressionRepository;
    rdfs:range pov:Expression.

pov:registeredExpression a owl:ObjectProperty;
    rdfs:label "registered expression"@en;
    rdfs:comment "Set of expressions."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:ExpressionRepository;
    rdfs:range pov:Expression.

# -----------------------------------------------
# Expression Properties
# -----------------------------------------------

pov:name a owl:DatatypeProperty; a owl:FunctionalProperty;
    rdfs:label "name"@en;
    rdfs:comment "Binding name used within query."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain [a owl:Class; owl:unionOf (pov:Expression pov:Display)];
    rdfs:range xsd:string.

pov:binding a owl:ObjectProperty;
    rdfs:label "binding"@en;
    rdfs:comment "Binding display parameters to be used when evaluating this expression."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Expression;
    rdfs:range pov:Display.

pov:inSparql a owl:DatatypeProperty; a owl:FunctionalProperty;
    rdfs:label "in SPARQL"@en;
    rdfs:comment "The query represented in SPARQL RDF Query Language."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Expression;
    rdfs:range xsd:string.

pov:inSerql a owl:DatatypeProperty; a owl:FunctionalProperty;
    rdfs:label "in SeRQL"@en;
    rdfs:comment "The query represented in Sesame RDF Query Language."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Expression;
    rdfs:range xsd:string.

pov:inJpql a owl:DatatypeProperty; a owl:FunctionalProperty;
    rdfs:label "in JPQL"@en;
    rdfs:comment "The query represented in Java Persistence Query Language."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Expression;
    rdfs:range xsd:string.

pov:inSql a owl:DatatypeProperty; a owl:FunctionalProperty;
    rdfs:label "in SQL"@en;
    rdfs:comment "The query represented in Structured Query Language."@en;
    rdfs:isDefinedBy pov:;
    rdfs:domain pov:Expression;
    rdfs:range xsd:string.

