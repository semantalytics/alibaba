    pov:pattern "{0,date,medium}".

ali:long-date a pov:MessagePatternFormat;
    rdfs:label "long date"@en;
    rdfs:comment "Displays the date in the long style."@en;
    pov:pattern "{0,date,long}".

ali:full-date a pov:MessagePatternFormat;
    rdfs:label "full date"@en;
    rdfs:comment "Displays the date in the full style."@en;
    pov:pattern "{0,date,full}".

ali:short-time a pov:MessagePatternFormat;
    rdfs:label "short time"@en;
    rdfs:comment "Displays the time in the short style."@en;
