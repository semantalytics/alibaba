# -----------------------------------------------
# Individual MessagePatternFormats
# -----------------------------------------------

ali:hidden a pov:MessagePatternFormat;
    rdfs:label "hidden"@en;
    rdfs:comment "No values are shown."@en;
    pov:pattern "".

ali:second-first a pov:MessagePatternFormat;
    rdfs:label "lastFirst"@en;
    rdfs:comment "The last value is displayed before the first separated by a comma."@en;
    pov:pattern "{1}, {0}".

ali:secret a pov:MessagePatternFormat;
    rdfs:label "secret"@en;
    rdfs:comment "Hides the value by replacing it with '*' charaters."@en;
    pov:pattern "********".

ali:short-dateTime a pov:MessagePatternFormat;
    rdfs:label "short dateTime"@en;
    rdfs:comment "Displays the dateTime in the short style."@en;
    pov:pattern "{0,date,short} {0,time,short}".

ali:medium-dateTime a pov:MessagePatternFormat;
    rdfs:label "medium dateTime"@en;
    rdfs:comment "Displays the dateTime in the medium style."@en;
    pov:pattern "{0,date,medium} {0,time,medium}".

ali:long-dateTime a pov:MessagePatternFormat;
    rdfs:label "long dateTime"@en;
    rdfs:comment "Displays the dateTime in the long style."@en;
