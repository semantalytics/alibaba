#
# Sesame configuration template for a main-memory repository
#
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix rep: <http://www.openrdf.org/config/repository#>.
@prefix sr: <http://www.openrdf.org/config/repository/sail#>.
@prefix sail: <http://www.openrdf.org/config/sail#>.
@prefix hr: <http://www.openrdf.org/config/repository/http#>.
@prefix : <http://www.openrdf.org/config/sail/federation#>.

[] a rep:Repository ;
   rep:repositoryID "federation-of-three" ;
   rep:repositoryTitle "Federation" ;
   rep:repositoryImpl [
      rep:repositoryType "openrdf:SailRepository" ;
      sr:sailImpl [
         sail:sailType "openrdf:Federation" ;

         :member [
      rep:repositoryType "openrdf:HTTPRepository" ;
      hr:serverURL "http://localhost:8080/openrdf-sesame" ;
      hr:repositoryID "repository1"
   ];

         :member [
      rep:repositoryType "openrdf:HTTPRepository" ;
      hr:serverURL "http://localhost:8080/openrdf-sesame" ;
      hr:repositoryID "repository2"
   ];

         :member [
      rep:repositoryType "openrdf:HTTPRepository" ;
      hr:serverURL "http://localhost:8080/openrdf-sesame" ;
      hr:repositoryID "repository3"
   ]

      ]
   ].


